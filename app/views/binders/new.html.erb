<h1>新建活页夹</h1>
<%= form_for(@binder) do |f| %>
    <% if @binder.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@binder.errors.count, "error") %> prohibited this stuff from being saved:</h2>

          <ul>
            <% @binder.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name, "名称" %>
      <%= f.text_field :name %>
    </div>


    <%= f.hidden_field :folder_id %>

    <div class="actions">
      <%= f.submit '创建', :class => 'btn' %>
    </div>
<% end %>
