<p id="notice"><%= notice %></p>

<h1>
  <i class="fa fa-archive"></i> 文件柜::<%= @folder.name %>
</h1>

<% if not @folder.stuffs.empty? %>
    <% @folder.stuffs.each do |stuff| %>
        <table class="table">
          <tr>
            <% if stuff.type == 'Binder' %>
                <td><i class="fa fa-folder-open"></i>
                  <%= link_to stuff.name, binder_path(stuff.id) %>   </td>
            <% else %>
                <td><i class="fa fa-file-o"></i>
                  <%= link_to truncate(stuff.content, length: 40), stuff_path(stuff.id) %>   </td>
            <% end %>

          </tr>
        </table>
    <% end %>
<% else %>
    <p class="muted">这个文件柜是空的。 </p>
<% end %>



<%= link_to 'Edit', edit_folder_path(@folder) %> |
<%= link_to 'Back', folders_path %>
