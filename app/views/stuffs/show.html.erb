<p id="notice"><%= notice %></p>

<p>

  <%= simple_format @stuff.content %>
</p>
<hr>
<ul class="inline">
  <li><strong>Deadline:</strong>
  <%= @stuff.deadline %></li>

  <li><strong>状态:</strong>
  <%= stuff_status_to_name @stuff.status %></li>
  <li>
    <i class="fa fa-tag"></i><strong>标签:</strong>
    <% @stuff.tags.each do |tag| %>
        <%= tag.name %>
    <% end %>
    <span><%= link_to '移除', remove_tags_stuff_path %></span>
    <%= link_to '增加', add_tags_stuff_path %>
  </li>
</ul>




<ul class="unstyled">
  <li><%= link_to '移动到其它文件柜', move_stuff_path %></li>
  <li><%= link_to '复制到其它文件柜', copy_stuff_path %></li>

  <li><%= link_to '编辑', edit_stuff_path(@stuff) %></li>
  <li><%= link_to '返回', stuffs_path %></li>

</ul>