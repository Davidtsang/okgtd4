<%= form_for(@stuff) do |f| %>
    <% if @stuff.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@stuff.errors.count, "error") %> prohibited this stuff from being saved:</h2>

          <ul>
            <% @stuff.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <% if @stuff.type== 'Binder' %>
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>
    <% end %>

    <% if not @stuff.deadline.nil? %>
        <div class="field">
          <%= f.label :deadline, "截止日期" %><br>
          <%= f.datetime_select :deadline, {}, {:class => "input-small"} %>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>



    <div class="actions">
      <%= f.submit '提交', :class => 'btn' %>
    </div>
<% end %>
